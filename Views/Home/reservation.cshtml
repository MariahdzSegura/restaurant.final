@{
ViewData["Title"] = "Reservation";
}

<h1>@ViewData["Title"]</h1>

<section id="reservation">
<h3>Make a Reservation</h3>
<form id="reservationForm">
<!-- Step 1: Personal Information -->
<div class="form-step" id="step1">
<h4>Step 1: Personal Information</h4>
<label for="name">Name:</label>
<input type="text" id="name" name="name" required>
<label for="email">Email:</label>
<input type="email" id="email" name="email" required>
<button type="button" onclick="nextStep(2)">Next</button>
</div>

<!-- Step 2: Reservation Details -->
<div class="form-step" id="step2" style="display: none;">
<h4>Step 2: Reservation Details</h4>
<label for="date">Date:</label>
<input type="date" id="date" name="date" required>
<label for="time">Time:</label>
<input type="time" id="time" name="time" required>
<button type="button" onclick="nextStep(3)">Next</button>
</div>

<!-- Step 3: Confirmation -->
<div class="form-step" id="step3" style="display: none;">
<h4>Step 3: Confirmation</h4>
<p>Please review your information and submit your reservation.</p>
<p><strong>Name:</strong> <span id="confirmName"></span></p>
<p><strong>Email:</strong> <span id="confirmEmail"></span></p>
<p><strong>Date:</strong> <span id="confirmDate"></span></p>
<p><strong>Time:</strong> <span id="confirmTime"></span></p>
<button type="submit">Submit</button>
</div>
</form>
</section>